<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="trutalk.com.agingtest">

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS"/>
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|mcc|mnc|screenSize"
            android:screenOrientation="portrait">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".TestActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|mcc|mnc|screenSize"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".VideoTest"
            android:configChanges="orientation|keyboard|keyboardHidden|mcc|mnc|screenSize"
            android:screenOrientation="portrait">
        </activity>

        <service
            android:name=".BootService"
            android:exported="false"/>

        <activity
            android:name=".BatteryInfoActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".FirstActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|mcc|mnc|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <data android:scheme="trutalk.com.agingtest"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".OtherTest"
            android:configChanges="orientation|keyboard|keyboardHidden|mcc|mnc|screenSize"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".CameraTest"
            android:configChanges="orientation|keyboard|keyboardHidden|mcc|mnc|screenSize"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".LogActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|mcc|mnc|screenSize"
            android:screenOrientation="portrait">
        </activity>

        <receiver
            android:name=".AgingTestModeReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SECRET_CODE"/>
                <data
                    android:host="2483"
                    android:scheme="android_secret_code"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>